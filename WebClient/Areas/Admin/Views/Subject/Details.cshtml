@using ViewModels.Subjects
@model SubjectVM
<div class="pagetitle">
    <h1>Subject Details</h1>
</div><!-- End Page Title -->

<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-6 m-auto ">
        <div class="card p-3">
    <div class="row mb-3">
        <label class="col-sm-12 fw-bold">Subject Name<span class="ms-1 text-red">*</span></label>
        <div class="col-sm-12">
            <input disabled asp-for="SubjectName" name="SubjectName" type="text" class="form-control" placeholder="Enter subject name" />
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-12 fw-bold">Subject Description<span class="ms-1 text-red">*</span></label>
        <div class="col-sm-12">
            <textarea disabled asp-for="Description" name="Description" type="text" class="form-control" placeholder="Enter subject description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-sm-12 d-flex flex-row justify-content-start">
            <a asp-area="Admin" asp-controller="Subject" asp-action="Index" class="btn btn-secondary me-2">
                <i class="bi bi-arrow-left"></i>
                <span>Return</span>
            </a>
            <a asp-area="Admin" asp-controller="Subject" asp-action="Update" asp-route-subjectId="@Model.SubjectId" class="btn btn-primary">
                <i class="bi bi-pencil"></i>
                <span>Edit</span>
            </a>
        </div>
    </div>
</div>

    </div>
</div>
