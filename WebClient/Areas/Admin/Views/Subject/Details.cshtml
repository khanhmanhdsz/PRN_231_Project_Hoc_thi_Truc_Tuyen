@using ViewModels.Subjects
@using ViewModels.Quizzes
@model SubjectVM
<div class="pagetitle">
    <h1>Subject Details</h1>
</div><!-- End Page Title -->

<div class="card p-3">
    <div class="row mb-3">
        <label class="col-sm-12 fw-bold">Subject Name<span class="ms-1 text-red">*</span></label>
        <div class="col-sm-12">
            <input disabled asp-for="SubjectName" name="SubjectName" type="text" class="form-control" placeholder="Enter subject name" />
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-12 fw-bold">Subject Description<span class="ms-1 text-red">*</span></label>
        <div class="col-sm-12">
            <textarea disabled asp-for="Description" name="Description" type="text" class="form-control" placeholder="Enter subject description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-sm-12 d-flex flex-row justify-content-start">
            <a asp-area="Admin" asp-controller="Subject" asp-action="Index" class="btn btn-secondary me-2">
                <i class="bi bi-arrow-left"></i>
                <span>Return</span>
            </a>
            <a asp-area="Admin" asp-controller="Subject" asp-action="Update" asp-route-subjectId="@Model.SubjectId" class="btn btn-primary">
                <i class="bi bi-pencil"></i>
                <span>Edit</span>
            </a>
        </div>
    </div>
</div>
<div class="card p-3">
    <h6 class="fw-bold">List quiz</h6>
    @if (Model.Quizzes.Count > 0)
    {
        @foreach (QuizVM item in Model.Quizzes)
        {
            <div class="card px-3 py-2" title="@item.Title" data-bs-toggle="tooltip" data-bs-placement="top">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-clipboard-check fs-2"></i>
                        </div>
                        <div>
                            <div class="d-flex flex-row ">
                                <h6 class="club-name fs-15 fw-bold">@item.Title</h6>
                            </div>
                            <div class="d-flex flex-row ">
                                <h6 class="fs-14 me-3">
                                    <i class="bi bi-question-circle"></i>
                                    <span>@item.Questions.Count</span>
                                </h6>
                                <h6 class="fs-14">
                                    <i class="bi bi-clock"></i>
                                    <span>@item.Duration</span>
                                    <span> minutes</span>
                                </h6>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-primary me-2" asp-controller="Quiz" asp-action="Details" asp-route-quizId="@item.QuizId">View</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h6 class="fw-bold text-red">No quizzes.</h6>
    }
</div>