@using ViewModels.Questions
@using ViewModels.Quizzes
@model QuestionVM

@{
    QuizVM quizVM = ViewData["Quiz"] as QuizVM;
}
<div class="pagetitle">
    <h1>Update Question</h1>
</div>
<div class="card">
    <div class="p-3">
        <div class="mb-2">
            <span class="fw-bold"> Quiz:</span>
            <a asp-area="Admin" asp-controller="Quiz" asp-action="Details" asp-route-quizId="@quizVM?.QuizId">@quizVM?.Title</a>
        </div>
        <form method="POST" asp-area="Admin" asp-controller="Question" asp-action="Update" enctype="multipart/form-data">
            <input type="hidden" name="QuizId" value="@quizVM?.QuizId" />
            <input type="hidden" name="QuestionId" value="@Model.QuestionId" />
            <div class="row mb-2">
                <label class="col-sm-12 fw-bold">Question Title<span class="ms-1 text-red">*</span></label>
                <div class="col-sm-12">
                    <input asp-for="Title" name="Title" type="text" class="form-control" placeholder="Enter subject name" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-12 col-md-6">
                    <label class="col-sm-12 fw-bold">Answer A<span class="ms-1 text-red">*</span></label>
                    <div class="col-sm-12">
                        <input type="text" asp-for="AnswerA" name="AnswerA" type="text" class="form-control" placeholder="Enter answer A">
                        <span asp-validation-for="AnswerA" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <label class="col-sm-12 fw-bold">Answer B<span class="ms-1 text-red">*</span></label>
                    <div class="col-sm-12">
                        <input type="text" asp-for="AnswerB" name="AnswerB" type="text" class="form-control" placeholder="Enter answer B">
                        <span asp-validation-for="AnswerB" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-12 col-md-6">
                    <label class="col-sm-12 fw-bold">Answer C<span class="ms-1 text-red">*</span></label>
                    <div class="col-sm-12">
                        <input type="text" asp-for="AnswerC" name="AnswerC" type="text" class="form-control" placeholder="Enter answer C">
                        <span asp-validation-for="AnswerC" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <label class="col-sm-12 fw-bold">Answer D<span class="ms-1 text-red">*</span></label>
                    <div class="col-sm-12">
                        <input type="text" asp-for="AnswerD" name="AnswerD" type="text" class="form-control" placeholder="Enter answer D">
                        <span asp-validation-for="AnswerD" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-12 fw-bold">Choose Correct Answer<span class="ms-1 text-red">*</span></label>
                <div class="col-sm-12">
                    <select asp-for="CorrectAnswer" name="CorrectAnswer" class="selectpicker show-tick form-control">
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-12 d-flex flex-row justify-content-start">
                    <a asp-area="Admin" asp-controller="Quiz" asp-action="Details" asp-route-quizId="@quizVM?.QuizId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i>
                        <span>Return</span>
                    </a>
                    <button onclick="showSpinner();" type="submit" class="btn btn-primary mx-2">
                        <span id="spinner" class="visually-hidden">
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="visually-hidden">Loading...</span>
                            <span>Processing</span>
                        </span>
                        <span id="btn-content">
                            <i class="bi bi-floppy"></i>
                            <span>Save</span>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

