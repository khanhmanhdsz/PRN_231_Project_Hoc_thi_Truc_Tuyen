@using ViewModels.Paging
@using ViewModels.QuizHistories
@model QuizHistoryPagingRequest
@{
    var searchTerm = ViewData["searchTerm"] as string;
}
<section id="clubs" class="clubs min-vh-100">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <h2 class="mb-2">Quiz History</h2>
            <span class="small-title">
                Viewing quiz history list
            </span>
            <div class="filter">
                <form asp-area="Student" asp-controller="QuizHistory" asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" name="searchTerm" value="@searchTerm" class="form-control rounded-0 rounded-start" id="search-term"
                               placeholder="Enter subject name" aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary rounded-0 rounded-end">
                                <span><i class="bi bi-search"></i> Search</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="section-content mt-2">
            @if (Model != null && Model?.ItemVMs?.Count > 0)
            {
                @foreach (QuizHistoryVM item in Model.ItemVMs)
                {
                    <div class="card px-3 py-2" title="@item.Quiz.Title" data-bs-toggle="tooltip" data-bs-placement="top">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <span style="margin-right: 15px; font-weight: bold; color: red" className="text-danger fw-bold mx-3">@(item.Score + "/" + item.QuestionHistories.Count)</span>
                                <div class="me-3">
                                    <i class="bi bi-clipboard-check fs-2"></i>
                                </div>
                                <div>
                                    <div class="d-flex flex-row ">
                                        <h6 class="club-name fs-15 fw-bold">@item.Quiz.Title</h6>
                                    </div>
                                    <div class="d-flex flex-row ">
                                        <h6 class="fs-14 me-3">
                                            <i class="bi bi-question-circle"></i>
                                            <span>@item.QuestionHistories.Count</span>
                                        </h6>
                                        <h6 class="fs-14 me-3">
                                            <i class="bi bi-clock"></i>
                                            <span>@item.Quiz.Duration</span>
                                            <span> minutes</span>
                                        </h6>
                                         <h6 class="fs-14">
                                            <i class="bi bi-book"></i>
                                            <span>@item.Quiz.Subject.SubjectName</span>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <a class="btn btn-primary" asp-area="Student" asp-controller="QuizHistory" asp-action="Details" asp-route-quizId="@item.QuizId">View</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <h6 class="fw-bold">Quizzes not found.</h6>
            }
        </div>
    </div>

</section>

