@using ViewModels.Quizzes
@using ViewModels.Questions
@using ViewModels
@using ViewModels.QuizHistories
@using ViewModels.QuestionHistories
@using DataAccess.Models
@using WebClient.Helpers
@model QuizHistory
@{
    List<QuestionHistory> questions = Model.QuestionHistories.ToList();
    Quiz quiz = Model.Quiz;
    int index = 1;
}
<section class="min-vh-100">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <h2 class="mb-2">Quiz Result</h2>
        </div>

        <div class="section-content">
            <div class="card p-4">
                <div class="row">
                    <div class="row">
                        <div class="col-sm-12 col-lg-2">
                            <span class="text-red fw-bold">Score: @(Model.Score + "/" + questions.Count)</span>
                        </div>
                        <div class="col-sm-12 col-lg-8 px-2">
                            <div class="row text-center mb-3">
                                <span class="fw-bold">@quiz.Title</span>
                                <span class="fst-italic">@quiz.Description</span>
                                <a>@quiz?.Subject?.SubjectName</a>

                                <div>
                                    <i class="bi bi-calendar-event"></i>
                                    <span>@Model.DateTaken</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-lg-2">

                        </div>
                    </div>
                    <form asp-area="Student" asp-controller="Quiz" asp-action="SubmitQuiz" method="post">
                        <input type="hidden" name="quizId" />
                        <div class="accordion" id="accordionFlush">
                            @foreach (var question in questions)
                            {
                                <div class="accordion-item">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="accordion-header px-3 pt-3 fw-bold" id="flush-heading-@question.QuestionId">
                                            <span>@(index++)</span>
                                            <span>. @question?.Question?.Title</span>
                                        </h6>
                                        <div class="pe-3 pt-2">
                                            @if (question.IsCorrect)
                                            {
                                                <span class="fw-bold">1/1</span>
                                            }
                                            else
                                            {
                                                <span class="fw-bold text-red">0/1</span>

                                            }
                                        </div>
                                    </div>
                                    <div id="flush-@question.QuestionId" class="accordion-collapse"
                                     aria-labelledby="flush-heading-@question.QuestionId"
                                     data-bs-parent="#accordionFlush">
                                        <div class="accordion-body">
                                            <div class="d-flex flex-column">
                                                <div class="form-check">
                                                    <input @(question.SelectedOption.Equals("A") ? "checked" : "") disabled class="form-check-input" type="radio" name="@question.QuestionId"
                                                       id="@(index + 1)">
                                                    <label class="form-check-label">
                                                        @question?.Question?.AnswerA
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input @(question.SelectedOption.Equals("B") ? "checked" : "") disabled class="form-check-input" type="radio" name="@question.QuestionId"
                                                       id="@(index + 100)">
                                                    <label class="form-check-label">
                                                        @question?.Question?.AnswerB
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input @(question.SelectedOption.Equals("C") ? "checked" : "") disabled class="form-check-input " type="radio" name="@question.QuestionId"
                                                       id="@(index + 1000)">
                                                    <label class="form-check-label">
                                                        @question?.Question?.AnswerC
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input @(question.SelectedOption.Equals("D") ? "checked" : "") disabled class="form-check-input" type="radio" name="@question.QuestionId"
                                                       id="@(index + 2000)">
                                                    <label class="form-check-label">
                                                        @question?.Question?.AnswerD
                                                    </label>
                                                </div>

                                                @if (question.IsCorrect)
                                                {
                                                    <span class="fw-bold text-danger">Correct.</span>
                                                } else
                                                {
                                                    
                                                    <span class="fw-bold text-danger"></span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="mt-3">
                            <a asp-area="Student" asp-controller="QuizHistory" asp-action="Details" asp-route-quizId="@Model.QuizId" class="btn btn-primary">Retake</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>


